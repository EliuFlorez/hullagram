{{!
  Here we use the friends widget distributed with hull-js
  This is just an override of its main template.
}}

{{#if friends}}
  <ul class="list list-friends">
      {{#friends}}
      <li>
          <a href="#/users/{{uid}}">
              <div class="author">
                  <div class="media cf">
                      <div class="img author-picture">
                          <img src="{{avatar}}" alt="{{name}}" class="media-object img-round">
                      </div>
                      <div class="bd author-metas">
                          <h3 class="author-title">{{name}}</h3>
                          <h4 class="author-updated">Joined {{fromNow created_at}}</h4>
                      </div>
                  </div>
              </div>
              <span class="chevron"></span>
              <span class="count">
                {{stats.images}} <i class="icon-camera"></i>
              </span>
            </a>
      </li>
  {{/friends}}
  </ul>
{{else}}
  <div class="empty-state">
    <i>&#9785;</i>
    <h3>No friends yet</h3>
  </div>
{{/if}}

